<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.shoesbox.entity">
    <class name="com.shoesbox.entity.Color" table="shoes_color">
        <id name="colorId" column="COLOR_ID" type="java.lang.Integer">
            <generator class="identity"></generator>
        </id>
        <property name="colorDescription">
            <column name="COLOR_DESC" sql-type="varchar" />
        </property>
    </class>
</hibernate-mapping>